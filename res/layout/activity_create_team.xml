<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTeam">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/ct_header_photo"
        android:src="@drawable/teamim"
        android:scaleType="centerCrop"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_below="@id/ct_header_photo"
        android:id="@+id/ct_header">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Δημιουργια Ομαδας"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="22dp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ct_header"
        android:id="@+id/ct_name"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Ονομα ομαδας: "
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Ονομα"
            android:layout_margin="5dp"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ct_name"
        android:id="@+id/ct_location"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Περιοχη: "
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Περιοχη"
            android:layout_margin="5dp"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ct_location"
        android:id="@+id/ct_product"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Προιον: "
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Προιον"
            android:layout_margin="5dp"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ct_price"
        android:id="@+id/ct_photo"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Επιλογη φωτογραφιας: "
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/farmer"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ct_product"
        android:id="@+id/ct_price"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Τιμη προιοντος: "
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:layout_margin="5dp"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/ct_photo">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton"
            android:text="Ολοκληρωση"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>



</RelativeLayout>